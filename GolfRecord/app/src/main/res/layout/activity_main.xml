<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TextHole1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/text_hole_1"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/PluseButton1"
        android:layout_width="@dimen/unitbutton"
        android:layout_height="@dimen/unitbutton"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/MinusButton1"
        android:layout_width="@dimen/unitbutton"
        android:layout_height="@dimen/unitbutton"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="-"
        app:layout_constraintEnd_toStartOf="@+id/PluseButton1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextScore1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/MinusButton1"
        app:layout_constraintStart_toEndOf="@+id/TextHole1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:accessibilityLiveRegion="none"
        android:background="@android:color/black"
        android:paddingLeft="@dimen/unitbutton"
        android:paddingRight="@dimen/unitbutton"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/PluseButton1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/TextHole1"
        app:layout_constraintTop_toBottomOf="@+id/MinusButton1" />

</androidx.constraintlayout.widget.ConstraintLayout>